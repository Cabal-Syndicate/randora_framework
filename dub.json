{
	"name": "randora_engine",
	"description": "Randora Engine.",
	"copyright": "Copyright Â© 2015, Master Foo",
	"authors": ["Master Foo"],
	"homepage": "https://github.com/Cabal-Syndicate",
	"license": "Attribution-NonCommercial-ShareAlike 4.0 International",
	
	"dependencies": {
		"derelict-sdl2": "~>1.9.5",
		"derelict-gl3": ">=1.0.9"
	},
	"sourcePaths": [
		"public",
		"scaffolds",
		"source",
		"views"
	],
	"targetPath": "bin",
	"libs":[
		"SDL2",
		"SDL2_image",
		"SDL2_ttf",
		"SDL2_mixer"
	],
	"buildtypes" : {
		"plain" : {
			"buildOptions" : []
		},
		"debug" : {
			"buildOptions" : [
				"debugMode",
				"debugInfo"
			],
			"dflags": [
				"-g",
				"--debug"
			]
		},
		"release" : {
			"buildOptions" : [
				"releaseMode",
				"optimize",
				"inline"
			]
		},
		"unittest" : {
			"buildOptions" : [
				"unittests",
				"debugMode",
				"debugInfo"
			]
		},
		"docs" : {
			"buildOptions" : [
				"syntaxOnly"
			],
			"dflags": [
				"-c",
				"-Dddocs"
			]
		},
		"ddox" : {
			"buildOptions" : [
				"syntaxOnly"
			],
			"dflags": [
				"-c",
				"-Df__dummy.html",
				"-Xfdocs.json"
			]
		},
		"profile" : {
			"buildOptions" : [
				"profile",
				"optimize",
				"inline",
				"debugInfo"
			]
		},
		"cov" : {
			"buildOptions" : [
				"coverage",
				"debugInfo"
			]
		},
		"unittest-cov" : {
			"buildOptions" : [
				"unittests",
				"coverage",
				"debugMode",
				"debugInfo"
			]
		}
	}
}
